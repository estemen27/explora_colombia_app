<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- Navbar amarilla -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/yellow"
        app:popupTheme="@style/Theme.AppCompat.Light"/>

    <!-- Contenedor para logo y título -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="Logo del restaurante"
            android:src="@drawable/logo_carreta"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="RESTAURANTE LA CARRETA"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Grid de botones -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="555dp"
        android:layout_marginHorizontal="12dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:padding="26dp"
        android:rowCount="3"

        android:useDefaultMargins="true">
        <!---->

        <!-- Menú -->
        <androidx.cardview.widget.CardView
            android:id="@+id/menu"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="18dp">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:background="@drawable/borderimg"
                android:backgroundTint="@color/grey"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:contentDescription="Icono de menú"
                    android:src="@drawable/menu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Menú"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Reseñas -->
        <androidx.cardview.widget.CardView
            android:id="@+id/reseña"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="18dp">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:background="@drawable/borderimg"
                android:backgroundTint="@color/grey"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:contentDescription="Icono de reseñas"
                    android:src="@drawable/res" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Reseñas"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Detalles de comercio -->
        <androidx.cardview.widget.CardView
            android:id="@+id/details"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="18dp">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:background="@drawable/borderimg"
                android:backgroundTint="@color/grey"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="Icono de detalles"
                    android:src="@drawable/papel" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Detalles de\ncomercio"
                    android:textAlignment="center"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Ofertas -->
        <androidx.cardview.widget.CardView
            android:id="@+id/offers"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="18dp">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:background="@drawable/borderimg"
                android:backgroundTint="@color/grey"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="Icono de ofertas"
                    android:src="@drawable/offer" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Ofertas"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Galería de imágenes (centrado) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/gallery"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            app:cardCornerRadius="18dp">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:background="@drawable/borderimg"
                android:backgroundTint="@color/grey"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:contentDescription="Icono de galería"
                    android:src="@drawable/gallery" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Galería de imágenes"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/black">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/trip" />

        <TextView
            android:layout_width="320dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:paddingTop="20dp"
            android:text="©2024 Tripadvisor LLC Todos los derechos reservados. Contáctanos Mapa del sitio Como funciona el sitio Declaración de privacidad y cookies Condiciones de uso"
            android:textColor="@color/white"
            android:textSize="12dp" />

    </LinearLayout>

</LinearLayout>