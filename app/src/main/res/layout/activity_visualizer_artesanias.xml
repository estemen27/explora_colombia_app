<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_gravity="center">

        <!-- Imagen 1 -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:src="@drawable/subimagen_1"
            android:contentDescription="Imagen 1"
            android:scaleType="centerCrop" />

        <!-- Imagen 2 -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:src="@drawable/subimagen_2"
            android:contentDescription="Imagen 2"
            android:scaleType="centerCrop" />

        <!-- Imagen 3 -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:src="@drawable/subimagen_3"
            android:contentDescription="Imagen 3"
            android:scaleType="centerCrop" />

        <!-- Imagen 4 -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:src="@drawable/subimagen_4"
            android:contentDescription="Imagen 4"
            android:scaleType="centerCrop" />

    </GridLayout>

</LinearLayout>